{
  "name": "pi-token-burden",
  "version": "0.1.3",
  "description": "Pi extension that shows a token-budget breakdown of the assembled system prompt",
  "keywords": [
    "pi-extension",
    "pi-package",
    "token-budget"
  ],
  "license": "MIT",
  "files": [
    "src/",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "scripts": {
    "lint": "oxlint -c .oxlintrc.json",
    "lint:fix": "oxlint -c .oxlintrc.json --fix",
    "format": "oxfmt --config .oxfmtrc.jsonc",
    "format:check": "oxfmt --config .oxfmtrc.jsonc --check",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "deadcode": "knip",
    "duplicates": "jscpd src/",
    "check": "bash scripts/check.sh",
    "fix": "bash scripts/fix.sh",
    "version": "changelogen --no-bump --output CHANGELOG.md && git add CHANGELOG.md",
    "changelog": "changelogen --no-bump --output CHANGELOG.md",
    "compare-tokenizers": "tsx scripts/compare-tokenizers.ts"
  },
  "dependencies": {
    "gpt-tokenizer": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "changelogen": "^0.6.2",
    "husky": "^9.1.7",
    "jscpd": "^4.0.8",
    "knip": "^5.85.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "ultracite": "^7.2.4",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@mariozechner/pi-coding-agent": "*",
    "@mariozechner/pi-tui": "*",
    "@sinclair/typebox": "*"
  },
  "packageManager": "pnpm@10.3.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "pi": {
    "extensions": [
      "./src/index.ts"
    ]
  }
}
