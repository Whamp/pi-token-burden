{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "extends": ["./node_modules/ultracite/config/oxlint/core/.oxlintrc.json"],
  "ignorePatterns": ["docs/", "node_modules/", "vendor/"],
  "jsPlugins": [
    { "name": "@factory", "specifier": "./vendor/factory-rules/plugin.cjs" }
  ],
  "rules": {
    "eslint/max-statements": ["warn", { "max": 60 }],
    "eslint/complexity": ["warn", { "max": 30 }],
    "eslint/func-style": "off",
    "eslint/class-methods-use-this": "off",
    "eslint/no-alert": "off",
    "eslint/no-plusplus": "off",
    "eslint/no-empty-function": "warn",
    "eslint/no-inner-declarations": "off",
    "eslint/no-inline-comments": "off",
    "eslint/require-await": "warn",
    "eslint/default-case": "warn",
    "eslint/sort-keys": "off",
    "eslint/prefer-template": "warn",
    "eslint/no-restricted-syntax": [
      "error",
      {
        "selector": "ForInStatement",
        "message": "for..in loops iterate over the entire prototype chain. Use Object.{keys,values,entries} instead."
      },
      {
        "selector": "LabeledStatement",
        "message": "Labels are a form of GOTO; using them makes code confusing."
      },
      {
        "selector": "WithStatement",
        "message": "`with` is disallowed in strict mode."
      },
      {
        "selector": "ExportAllDeclaration",
        "message": "Export all doesn't work well with ESM and can expose internal methods."
      }
    ],
    "eslint-plugin-unicorn/prefer-query-selector": "off",
    "eslint-plugin-unicorn/prefer-add-event-listener": "off",
    "eslint-plugin-unicorn/no-array-for-each": "warn",
    "eslint-plugin-unicorn/no-lonely-if": "off",
    "eslint-plugin-unicorn/consistent-function-scoping": "warn",
    "eslint-plugin-vitest/prefer-describe-function-title": "off",
    "eslint-plugin-vitest/prefer-called-times": "off",
    "eslint-plugin-jest/prefer-called-with": "off",
    "eslint-plugin-jest/require-hook": "off",
    "eslint-plugin-jest/no-hooks": "off",
    "eslint-plugin-jest/max-expects": "off",
    "eslint-plugin-jest/no-conditional-in-test": "off",
    "eslint-plugin-import/consistent-type-specifier-style": "off",
    "eslint-plugin-promise/avoid-new": "off",
    "typescript-eslint/no-explicit-any": "error",
    "typescript-eslint/no-non-null-assertion": "warn",
    "typescript-eslint/no-inferrable-types": "off",
    "no-barrel-file": "off",
    "oxc/no-async-endpoint-handlers": "off",
    "@factory/enum-file-organization": "error",
    "@factory/types-file-organization": "error",
    "@factory/constants-file-organization": "error",
    "@factory/errors-file-organization": "error",
    "@factory/no-exported-string-union-types": "error",
    "@factory/no-exported-function-expressions": "off",
    "@factory/structured-logging": "off",
    "@factory/no-log-exception-with-throw": "error",
    "@factory/test-utils-organization": "error",
    "@factory/test-file-location": "error",
    "@factory/require-test-files": "error",
    "@factory/jest-mock-require-actual": "error",
    "@factory/no-unstable-mock-module": "error"
  },
  "overrides": [
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
      ],
      "rules": {
        "eslint/no-empty-function": "off",
        "eslint/require-await": "off",
        "eslint-plugin-unicorn/consistent-function-scoping": "off",
        "@factory/constants-file-organization": "off"
      }
    },
    {
      "files": ["**/schema.ts"],
      "rules": {
        "@factory/types-file-organization": "off",
        "@factory/constants-file-organization": "off"
      }
    },
    {
      "files": ["**/errors.ts"],
      "rules": {
        "eslint/max-classes-per-file": "off"
      }
    },
    {
      "files": ["**/index.ts", "**/index.tsx"],
      "rules": {
        "no-barrel-file": "off"
      }
    },
    {
      "files": ["vitest.config.ts", "*.config.ts"],
      "rules": {
        "@factory/require-test-files": "off",
        "@factory/constants-file-organization": "off"
      }
    }
  ]
}
